<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsaap Chats</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <div class="container-fluid">
        <div class="chat-container">
            <div class="sidebar">
                <div class="d-flex align-items-center mb-4">
                    <i class="bi bi-whatsapp" style="font-size:2rem;color:#25d366;"></i>
                    <h3 class="ms-2 mb-0 fw-bold">Whatsaap</h3>
                </div>
                <a href="/chats/new" class="btn btn-success w-100 mb-3"><i class="bi bi-pencil-square me-2"></i>Send
                    Message</a>
                <hr>
                <div>
                    <strong class="d-block mb-2"><i class="bi bi-people me-2"></i>Contacts</strong>
                    <ul class="list-unstyled mt-2">
                        <% let contacts=[...new Set(chats.map(c=> c.from))]; %>
                            <% for(let contact of contacts){ %>
                                <li class="mb-2"><span class="badge bg-primary"><i class="bi bi-person-circle me-1"></i>
                                        <%= contact %>
                                    </span></li>
                                <% } %>
                    </ul>
                </div>
            </div>
            <div class="chat-area">
                <div class="chat-header d-flex align-items-center justify-content-between">
                    <h4 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Chats</h4>
                    <span class="text-light small"><i class="bi bi-clock-history me-1"></i>Last updated: <%= new
                            Date().toLocaleTimeString() %></span>
                </div>
                <div class="chat-list">
                    <% for(chat of chats){ %>
                        <div class="chat-bubble <%= chat.from === 'me' ? 'from-me' : 'from-them' %> shadow-sm">
                            <div class="d-flex align-items-center mb-2">
                                <span class="me-2"><i class="bi bi-person-circle"></i></span>
                                <strong>
                                    <%= chat.from %>
                                </strong>
                                <span class="mx-2 text-muted">to</span>
                                <strong>
                                    <%= chat.to %>
                                </strong>
                            </div>
                            <div class="fs-5 mb-2">
                                <%= chat.msg %>
                            </div>
                            <div class="chat-meta">
                                <span><i class="bi bi-calendar-date me-1"></i>
                                    <%= new Date(chat.created_at).toLocaleString() %>
                                </span>
                            </div>
                            <div class="chat-actions mt-2">
                                <a href="/chats/<%=chat._id%>/edit" class="btn btn-sm btn-outline-primary"><i
                                        class="bi bi-pencil-square me-1"></i>Edit</a>
                                <form action="/chats/<%=chat._id%>/delete?_method=DELETE" method="post"
                                    style="display:inline;">
                                    <button class="btn btn-sm btn-outline-danger"><i
                                            class="bi bi-trash me-1"></i>Unsend</button>
                                </form>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>